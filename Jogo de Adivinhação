programa {
    inclua biblioteca Util --> u
      
        
        inteiro numero
        inteiro sorteio
        inteiro tentativas = 1
        logico reiniciar = verdadeiro
        
        funcao sortear(){
        sorteio = u.sorteia(1, 100)

        escreva("Jogo de adivinhação!\n")
        escreva("Digite um numero entre 1 e 100 para tentar adivinhar\n\n")
        escreva("Resposta:")
        leia(numero)
        limpa()
        
        escreva(sorteio,"\n")
        }


        funcao jogar(){
        enquanto(numero<sorteio ou numero>sorteio)
          se(tentativas>9){
          escreva("Game Over!\n")
          pare}
          
          senao se(sorteio<numero){
            escreva("O numero digitado é maior que o Sorteado\n\n")
            escreva("Tente novamente!\n\n")
            escreva("Resposta:")
            tentativas++
            leia(numero)
            limpa()
            }
            
          senao se(sorteio>numero){
            escreva("O numero digitado é menor que o Sorteado\n\n")
            escreva("Tente novamente!\n\n")
            escreva("Resposta:")
            tentativas++
            leia(numero)
            limpa()
          }
        
        

        se(numero==sorteio)
        escreva("Parabéns você acertou")
        }


      funcao inicio() {
        enquanto(reiniciar){
        sortear()
        jogar()
          escreva("\nDeseja jogar novamente? digite 'y' para sim e 'n' para não:\n\n")
          escreva("Resposta:\t")
          leia(reiniciar)
          limpa()
      }
  }
}
